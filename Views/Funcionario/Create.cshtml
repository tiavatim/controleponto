<script type="text/javascript">

        $("#btnCEP").on("click", function () {

        var cepcampo = $("#CEP").val();

         var data = JSON.stringify({ cep: cepcampo });
        $.ajax({
            url: '@Url.Action("BuscarCEP", "Funcionario")' + '?cep=' + cepcampo.toString(),
            type: 'POST',
            data: cepcampo.toString(),
            success: function (data) {
                $("#Logradouro").val(data.bag.logradouro);
                $("#Cidade").val(data.bag.localidade);
                $("#Estado").val(data.bag.uf);


               console.log(data)

            },
            error: function (error) {

            }
        })
         });


</script>




